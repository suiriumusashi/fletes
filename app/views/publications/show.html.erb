<main id="cont-info-controllers">
  <section class="cont">
    <!-- <p id="notice"><%= notice %></p> -->

    <p>
      <strong>Titlo de la publicacion:</strong>
      <%= @publication.title %>
    </p>

    <p>
      <strong>Día de recoleccion:</strong>
      <%= @publication.day_pickup %>
    </p>

    <p>
      <strong>Hora de recoleccion:</strong>
      <%= @publication.time_pickup %>
    </p>

    <p>
      <strong>Día de entrega:</strong>
      <%= @publication.day_delivery %>
    </p>

    <p>
      <strong>Hora de entrega:</strong>
      <%= @publication.time_delivery %>
    </p>

    <p>
      <strong>Ciudad de recoleccion:</strong>
      <%= @publication.origin %>
    </p>

    <p>
      <strong>Ciudad de entrega:</strong>
      <%= @publication.destiny %>
    </p>

    <p>
      <strong>Descripcion:</strong>
      <%= @publication.description %>
    </p>

    <% if admin_signed_in? %>
        <p>
          <strong>Presupuesto del cliente: </strong>
          $<%= @publication.estimated_price %>
        </p>
    <% end %>

    <p>
      <strong>Presupuesto estimado: </strong>
      $<%= @publication.final_price %>
    </p>

    <p>
    <strong>Servicios que se requieren: </strong>
      <%= @publication.services.collect(&:name).join("  |  ") %>
    </p>
    <p>
      <strong>Camiones que se requieren: </strong>
      <%= @publication.trucks.collect(&:name).join("  |  ") %>
    </p>

    <p>
      <strong>Pesos estimados de la carga: </strong>
      <%= @publication.loads.collect(&:range).join("  |  ") %>
    </p>

    <p>
      <strong>Estado de la publicacion: </strong>
      <%  if @publication.status == "1" %>
        Activada
      <% else %>
        Finalizada
      <% end %>
    </p>

    <%= link_to publications_path, :class => "back-publication-show" do%>
      <span class="icon-reply"></span>
    <%end%>
   
  </section>
</main>
