<p id="notice"><%= notice %></p>

<main id="services-cont">
  <section class="cont">
    <h1 class="title-publications">Listado de Servicios</h1>
    
        <% @services.each do |service| %>

          <article class="register">
            <div class="name"><%= service.name %></div>
            <div class="actions">
              <%= link_to service, :class => "link-action" do%>
                <span class="icon-remove-red-eye"></span>
              <% end %>
              <%= link_to edit_service_path(service), :class => "link-action" do %>
                <span class="icon-edit"></span>
              <% end %>
              <%= link_to service, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link-action" do %>
                <span class="icon-cancel"></span>
              <% end %>
            </div>
          </article>

        <% end %>
        <%= link_to  new_service_path, :class => "link-more-services" do%>
          <span class="icon-plus"></span>
        <%end%>
  </section>
</main>